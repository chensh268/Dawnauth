@model IEnumerable<DawnAuthModuleMDL>
@{
    ViewBag.Title = "机制绑定";
    ViewBag.MIndex = 2;
    ViewBag.CIndex = 1;
    ViewBag.BodyTitle = "管理员状态机制分配";
    Layout = "~/Views/Shared/_LayoutEditor.cshtml";
    int FPageCurrent = TypeHelper.TypeToInt32(ViewBag.PageCurrent, 1);
    int FUserId = TypeHelper.TypeToInt32(ViewBag.UserId, 0);
}
@section Functions{
    <li><input class="button" type="button" value="返 回" onclick="GotoHref('/User/List/@FPageCurrent');" /></li>
}
@Html.AntiForgeryToken()
<div class="margin-top-20 margin-left-20">
    <ul id="moduleList" class="float-left list-box scroll-y wper30">
        @foreach (var item in Model) {
            <li class="bi"><input class="button-black" type="button" value="@item.MdlName" onclick="dataStatus(this,@item.MdlId,@FUserId);" /></li>
        }
    </ul>
    <ul class="float-left margin-left-30 list-box" id="divStatusArea">
        <li class="field-item bi">
            <label>请选择功能模块</label>
        </li>
    </ul>
    <div class="clearfix"></div>
</div>
@section Scripts{
    <script src="@Scripts.Url("~/Scripts/user/bind-status.js")" type="text/javascript"></script>
}